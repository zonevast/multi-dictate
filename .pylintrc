[MASTER]
# Specify a score threshold to be exceeded before program exits with error.
fail-under=8.0

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0103,  # invalid-name (for module-level params, fifo_path)
    W0718,  # broad-exception-caught (intentional for robustness)
    R0902,  # too-many-instance-attributes (complex app state)
    R0914,  # too-many-locals (complex functions)
    C0415,  # import-outside-toplevel (lazy imports for performance)
    W1203,  # logging-fstring-interpolation (prefer f-strings)

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=100

[DESIGN]
# Maximum number of instance attributes
max-attributes=20

# Maximum number of locals
max-locals=20